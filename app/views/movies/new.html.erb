<h1>Add a Movie</h1>
<%= form_for @movie do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label 'Released' %>
  <%= f.text_field :year_released %>

  <%= f.label :director_id %>
  <%= f.collection_select(:director_id, Director.all, :id, :name) %>

  <%= f.label :rated %>
  <%= f.select_tag(:rated, options_for_select([['G', 1], ['PG', 2],['PG-13', 3],['R', 4],['Director\'s Cut', 5]], 1) %>
  <%= f.label 'Sloppy Potatoes Rating(1-5 Spuds)' %>
  <%= f.text_field :sloppy_potatoes_rating %>

  <%= f.submit %>
<% end %>
